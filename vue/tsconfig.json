{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "isolatedModules": true,
    "paths": {
      "pages/*": ["./src/pages/*"],
      "blogs/*": ["../blogs/*"],
      "assets/*": ["../public/assets/*"],
      "components/*": ["./src/components/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS",
     },
  },
  "include": ["src/**/*.ts", "config", "types", "src/**/*.vue"],         
  "exclude": [
    "../node_modules",
    "node_modules",                               // 排除 node_modules
    "dist"                                        // 排除构建输出目录
  ]
}